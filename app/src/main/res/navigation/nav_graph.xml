<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodplanner.presentation.home.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mealsByCategoryFragment"
            app:destination="@id/mealsByCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.foodplanner.presentation.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchByCategoryFragment"
            app:destination="@id/searchByCategoryFragment" />
<!--        <argument-->
<!--            android:name="meal_filter"-->
<!--            app:argType="com.example.foodplanner.data.model.search.MealFilter" />-->
    </fragment>

    <fragment
        android:id="@+id/mealPlannerFragment"
        android:name="com.example.foodplanner.presentation.mealplanner.MealPlannerFragment"
        android:label="fragment_meal_planner"
        tools:layout="@layout/fragment_meal_planner" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.foodplanner.presentation.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodplanner.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/mealsByCategoryFragment"
        android:name="com.example.foodplanner.presentation.meals_by_category.view.MealsByCategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_mealsByCategoryFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.foodplanner.presentation.recipe_details.RecipeDetailsFragment"
        android:label="fragment_recipe_details"
        tools:layout="@layout/fragment_recipe_details" >
        <argument
            android:name="idMeal"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchByCategoryFragment"
        android:name="com.example.foodplanner.presentation.searchByCategory.SearchByCategoryFragment"
        android:label="fragment_search_by_category"
        tools:layout="@layout/fragment_search_by_category" />
</navigation>