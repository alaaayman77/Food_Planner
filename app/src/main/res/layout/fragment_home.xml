<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.home.view.HomeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_gradient_header" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_very_large"
            android:fontFamily="@font/poppins"
            android:text="@string/welcome_back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.9"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Alaa âœ¨"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:letterSpacing="-0.02"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/welcome" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/random_meal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:cardMaxElevation="20dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/card_dark"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/mealImage"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash_bg"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/gradientOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/gradient_overlay"
                    app:layout_constraintBottom_toBottomOf="@id/mealImage"
                    app:layout_constraintEnd_toEndOf="@id/mealImage"
                    app:layout_constraintStart_toStartOf="@id/mealImage"
                    app:layout_constraintTop_toTopOf="@id/mealImage" />

                <TextView
                    android:id="@+id/mealOfDayBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:background="@drawable/meal_badge"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="MEAL OF THE DAY"
                    android:textColor="@color/card_dark"
                    android:textSize="11sp"
                    android:letterSpacing="0.05"
                    android:elevation="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- ADD TO PLAN BUTTON (Calendar Icon) -->
                <ImageView
                    android:id="@+id/btnAddToPlan"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="20dp"
                    android:padding="12dp"
                    android:src="@drawable/icon_calender"
                    android:background="@drawable/calendar_button_bg"
                    android:elevation="4dp"
                    android:contentDescription="Add to meal plan"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mealTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginBottom="64dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0dp"
                    android:text="Apple &amp; Blackberry\nCrumble"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/mealImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:background="@drawable/glass_tag_bg"
                    android:elevation="2dp"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.03"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="DESSERT"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/mealImage"
                    app:layout_constraintStart_toStartOf="@id/mealImage"
                    app:layout_constraintTop_toBottomOf="@id/mealTitle"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:background="@drawable/glass_tag_bg"
                    android:elevation="2dp"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.03"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="BRITISH"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/mealImage"
                    app:layout_constraintStart_toEndOf="@id/tag1"
                    app:layout_constraintTop_toBottomOf="@id/mealTitle"
                    app:layout_constraintVertical_bias="1.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/categoriesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/categories"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:letterSpacing="-0.01"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/random_meal" />

        <TextView
            android:id="@+id/categoriesSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Explore delicious options"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/categoriesHeader" />

        <!-- Categories RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler_view"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoriesSubtitle"
            tools:listitem="@layout/item_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>