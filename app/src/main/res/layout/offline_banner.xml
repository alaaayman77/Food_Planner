<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offlineBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offline_banner_bg"
    android:padding="12dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/offlineIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_offline"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/offlineText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins"
        android:text="You're offline. Showing saved content only."
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/offlineIcon"
        app:layout_constraintEnd_toStartOf="@id/retryButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/retryButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_refresh"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>